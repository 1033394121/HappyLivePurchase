<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@null">

    <!--<ImageView-->
    <!--android:id="@+id/state_img_top"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="24dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:src="@mipmap/ready" />-->

    <ImageView

        android:id="@+id/image_people"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/people_top_layout"
        android:src="@mipmap/rs" />

    <TextView
        android:id="@+id/people_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gwc_top_layout"
        android:layout_alignBottom="@+id/gwc_top_layout"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/gwc"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/gwc_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/gwc"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/gwc_top_layout"
        android:src="@mipmap/gwc2" />
</RelativeLayout>